	bg         = Color3.fromRGB(24, 26, 28),
	surface    = Color3.fromRGB(30, 33, 36),
	surface2   = Color3.fromRGB(36, 40, 44),
	text       = Color3.fromRGB(230, 240, 240),
	textSubtle = Color3.fromRGB(160, 180, 185),
	accent     = Color3.fromRGB(62, 140, 140),
	accentHi   = Color3.fromRGB(90, 190, 190),
	danger     = Color3.fromRGB(210, 70, 70),
	warn       = Color3.fromRGB(255, 200, 40),
	barH1      = Color3.fromRGB(30, 200, 120),
	barH2      = Color3.fromRGB(240, 170, 0),
	barR1      = Color3.fromRGB(100, 150, 255),
	barR2      = Color3.fromRGB(130, 220, 255),
}

-- Default settings (some will be persisted)
local SETTINGS = {
	Animations = true,
	CompactMode = false,
	ColorblindBars = false,
	FPSSaver = false,
	DefaultSpeed = 9,
	RunSpeed = 20,
	SafetyRefreshSeconds = 0,
}

-- HP alert tuning
local HPState = { Enabled = false, Mode = "ALERT" }
local HP_ALERT = { MinDrop = 10, Cooldown = 3, _last = 0 } -- threshold + cooldown

-- Layout constants
local RADIUS = 12
local TITLE_H = 36

-- Helpers
local function round(inst, r)
	local u = Instance.new("UICorner")
	u.CornerRadius = UDim.new(0, r or RADIUS)
	u.Parent = inst
end
local function stroke(inst, t, c, tr)
	local s = Instance.new("UIStroke")
	s.Thickness = t or 1
	s.Color = c or THEME.text
	s.Transparency = tr or 0.88
	s.Parent = inst
end

-------------------------
-- Settings persistence --
-------------------------
local function saveSetting(key, val)
	pcall(function() player:SetAttribute("ZL_" .. key, val) end)
end
local function loadSetting(key, default)
	local v; pcall(function() v = player:GetAttribute("ZL_" .. key) end)
	if v == nil then return default end
	return v
end
-- Load persisted values (if any)
for k, v in pairs(SETTINGS) do
	SETTINGS[k] = loadSetting(k, v)
end
HP_ALERT.MinDrop = loadSetting("HP_MinDrop", HP_ALERT.MinDrop)
HP_ALERT.Cooldown = loadSetting("HP_Cooldown", HP_ALERT.Cooldown)

