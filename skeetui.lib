-- function to set active tab
local function setActiveTab(name)
    for k,btn in pairs(navButtons) do
        local indicator = btn:FindFirstChild("Indicator")
        local label = btn:FindFirstChild("Label")
        local icon = btn:FindFirstChild("Icon")
        if indicator then indicator.Visible = (k == name) end
        if label then label.TextColor3 = (k == name) and C.textWhite or C.textLight end
        if icon then icon.TextColor3 = (k == name) and C.textWhite or C.accentGreen end
    end
    for k,page in pairs(pages) do
        page.Visible = (k == name)
    end
end

