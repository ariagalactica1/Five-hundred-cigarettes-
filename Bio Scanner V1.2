		for _, child in ipairs(dataFolder:GetChildren()) do
			if (child:IsA("BoolValue") and child.Value == true)
				or (child:IsA("IntValue") and child.Value > 0 and child.Name:lower():find("perk"))
			then
				table.insert(activePerks, child.Name)
			end
		end
	end
	tab2Labels["Active Perks"].Text = (#activePerks > 0) and ("Active Perks: " .. table.concat(activePerks, ", ")) or "Active Perks: None"
end

-- Connections management
local connections: {RBXScriptConnection} = {}
local function disconnectAll()
	for _, c in ipairs(connections) do
		pcall(function() c:Disconnect() end)
	end
	table.clear(connections)
end

-- Current target tracking
local currentTarget: Player? = nil

local function resolveTargetFromBox(): Player?
	local t = box.Text
	return (t == "" and LocalPlayer) or Players:FindFirstChild(t)
end

local function refreshAll()
	if not currentTarget then
		for _, lbl in pairs(tab1Labels) do lbl.Text = "[NO DATA]" end
		for _, lbl in pairs(tab2Labels) do lbl.Text = "[NO DATA]" end
		healthBar.Size = UDim2.new(0,0,1,0)
		resilienceBar.Size = UDim2.new(0,0,1,0)
		return
	end
	updateTab1(currentTarget)
	updateTab2(currentTarget)
end

local function rewireForTarget(target: Player?)
	if currentTarget == target then return end
	currentTarget = target
	disconnectAll()
	if not target then
		refreshAll()
		return
	end

	-- Initial fill
	refreshAll()

	-- Listen for respawn
	table.insert(connections, target.CharacterAdded:Connect(function()
		task.defer(refreshAll)
		-- When character spawns, we will rebind humanoid-specific signals below via a small delay
		task.delay(0.1, function()
			local char = getCharacter(target)
			local hum = char and char:FindFirstChildOfClass("Humanoid")
			if hum then
				table.insert(connections, hum.HealthChanged:Connect(function() updateTab1(target) end))
				table.insert(connections, hum:GetPropertyChangedSignal("MaxHealth"):Connect(function() updateTab1(target) end))
				table.insert(connections, hum:GetPropertyChangedSignal("WalkSpeed"):Connect(function() updateTab2(target) end))
			end
		end)
	end))

	-- If character exists now, bind humanoid signals
	do
		local char = getCharacter(target)
		local hum = char and char:FindFirstChildOfClass("Humanoid")
		if hum then
			table.insert(connections, hum.HealthChanged:Connect(function() updateTab1(target) end))
			table.insert(connections, hum:GetPropertyChangedSignal("MaxHealth"):Connect(function() updateTab1(target) end))
			table.insert(connections, hum:GetPropertyChangedSignal("WalkSpeed"):Connect(function() updateTab2(target) end))
		end
	end

	-- Attribute changes on player + character
	table.insert(connections, target.AttributeChanged:Connect(function()
		updateTab1(target); updateTab2(target)
	end))
	do
		local char = getCharacter(target)
		if char then
			table.insert(connections, char.AttributeChanged:Connect(function()
				updateTab1(target); updateTab2(target)
			end))
		end
	end

	-- Data folder watchers (credits/perks)
	local dataFolder = target:FindFirstChild("Data")
	if dataFolder then
		table.insert(connections, dataFolder.ChildAdded:Connect(function(c) updateTab2(target) end))
		table.insert(connections, dataFolder.ChildRemoved:Connect(function(c) updateTab2(target) end))
		for _, child in ipairs(dataFolder:GetChildren()) do
			table.insert(connections, child.Changed:Connect(function() updateTab2(target) end))
		end
	end

	-- Safety refresh (optional low frequency)
	if SETTINGS.SafetyRefreshSeconds > 0 then
		local alive = true
		local conn; conn = gui.AncestryChanged:Connect(function(_, parent) if not parent then alive = false conn:Disconnect() end end)
		task.spawn(function()
			while alive and currentTarget == target do
				task.wait(SETTINGS.SafetyRefreshSeconds)
				if alive and currentTarget == target then refreshAll() end
			end
		end)
	end
end

