local settingsPanel = Instance.new("Frame")
settingsPanel.Visible = false
settingsPanel.ZIndex = 300
settingsPanel.Size = UDim2.new(0, 290, 0, 290)
settingsPanel.Position = UDim2.new(1, -300, 0, TITLE_H + 8)
