local function barColors(kind: "health"|"resil")
	if SETTINGS.ColorblindBars then
		return Color3.fromRGB(90,120,255), Color3.fromRGB(140,200,255)
	else
		return (kind=="health") and Color3.fromRGB(30,200,120) or Color3.fromRGB(100,150,255),
		       (kind=="health") and Color3.fromRGB(240,170,0)  or Color3.fromRGB(130,220,255)
	end
end
local function styleBar(bg: Frame, fill: Frame, fromCol: Color3, toCol: Color3)
	bg.BackgroundColor3 = PALETTE.surface
	bg.BorderSizePixel = 0
	Instance.new("UICorner", bg).CornerRadius = UDim.new(0, RADIUS-6)
	local s = Instance.new("UIStroke", bg); s.Thickness=1; s.Color=PALETTE.stroke; s.Transparency=0.88
	fill.BorderSizePixel = 0
	Instance.new("UICorner", fill).CornerRadius = UDim.new(0, RADIUS-6)
	local g = ensureGradient(fill); g.Color = ColorSequence.new({ ColorSequenceKeypoint.new(0, fromCol), ColorSequenceKeypoint.new(1, toCol) })
end
local function tweenBar(bar: Frame, pct: number)
	pct = math.clamp(pct, 0, 1)
	if SETTINGS.Animations then
		TweenService:Create(bar, TweenInfo.new(0.18, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(pct,0,1,0)}):Play()
	else
		bar.Size = UDim2.new(pct,0,1,0)
	end
end

