-- toggle line (compact)
local function addToggleLine(card, labelText, default)
    local line = Instance.new("Frame")
    line.Parent = card
    line.Size = UDim2.new(1,0,0,28)
    line.Position = UDim2.new(0,0,0,30)
    line.BackgroundTransparency = 1

    local lbl = Instance.new("TextLabel")
    lbl.Parent = line
    lbl.Size = UDim2.new(0.6,0,1,0)
    lbl.BackgroundTransparency = 1
    lbl.Text = labelText
    lbl.Font = Enum.Font.Gotham
    lbl.TextSize = 13
    lbl.TextColor3 = C.textLight
    lbl.TextXAlignment = Enum.TextXAlignment.Left

    local btn = Instance.new("TextButton")
    btn.Parent = line
    btn.Size = UDim2.new(0,36,0,20)
    btn.Position = UDim2.new(1, -40, 0, 4)
    btn.Text = ""
    btn.BackgroundColor3 = default and C.accentGreen or C.bgControl
    btn.BorderColor3 = C.borderColor
    btn.AutoButtonColor = true
    local c = Instance.new("UICorner", btn)
    c.CornerRadius = UDim.new(0, 16)

    local knob = Instance.new("Frame")
    knob.Parent = btn
    knob.Size = UDim2.new(0,10,0,10)
    knob.Position = default and UDim2.new(0, 18, 0, 5) or UDim2.new(0, 6, 0, 5)
    knob.BackgroundColor3 = default and C.bgSidebar or Color3.fromRGB(136,136,136)
    local kc = Instance.new("UICorner", knob)
    kc.CornerRadius = UDim.new(1,0)

    local toggled = default and true or false
    btn.MouseButton1Click:Connect(function()
        toggled = not toggled
        if toggled then
            btn.BackgroundColor3 = C.accentGreen
            knob:TweenPosition(UDim2.new(0, 18, 0, 5), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, .12, true)
            knob.BackgroundColor3 = C.bgSidebar
        else
            btn.BackgroundColor3 = C.bgControl
            knob:TweenPosition(UDim2.new(0, 6, 0, 5), Enum.EasingDirection.Out, Enum.EasingStyle.Quad, .12, true)
            knob.BackgroundColor3 = Color3.fromRGB(136,136,136)
        end
    end)
    return line
end

-- slider (compact)
local function addSliderLine(card, labelText, min, max, initial)
    min = min or 0; max = max or 100; initial = initial or 0
    local yOff = (#card:GetChildren()) * 0 -- not used; we'll position using automatic layout in pages
    local container = Instance.new("Frame")
    container.Parent = card
    container.Size = UDim2.new(1,0,0,56)
    container.BackgroundTransparency = 1

    local label = Instance.new("TextLabel")
    label.Parent = container
    label.Size = UDim2.new(0.6,0,0,20)
    label.BackgroundTransparency = 1
    label.Text = labelText
    label.Font = Enum.Font.Gotham
    label.TextSize = 13
    label.TextColor3 = C.textLight
    label.TextXAlignment = Enum.TextXAlignment.Left

    local value = Instance.new("TextLabel")
    value.Parent = container
    value.Size = UDim2.new(0.3,0,0,20)
    value.Position = UDim2.new(0.7, 0, 0, 0)
    value.BackgroundTransparency = 1
    value.Text = tostring(initial)
    value.Font = Enum.Font.Gotham
    value.TextSize = 13
    value.TextColor3 = C.textMuted
    value.TextXAlignment = Enum.TextXAlignment.Right

    local bar = Instance.new("Frame")
    bar.Parent = container
    bar.Size = UDim2.new(1, -80, 0, 8)
    bar.Position = UDim2.new(0, 40, 0, 28)
    bar.BackgroundColor3 = C.bgControl
    local bcorner = Instance.new("UICorner", bar)
    bcorner.CornerRadius = UDim.new(0, 6)

    local fill = Instance.new("Frame")
    fill.Parent = bar
    local frac = (initial - min) / math.max(1, (max - min))
    fill.Size = UDim2.new(frac, 0, 1, 0)
    fill.BackgroundColor3 = C.accentGreen
    local fcorner = Instance.new("UICorner", fill)
    fcorner.CornerRadius = UDim.new(0, 6)

    local thumb = Instance.new("ImageButton")
    thumb.Parent = container
    thumb.Size = UDim2.new(0, 14, 0, 14)
    thumb.Position = UDim2.new(0, 40 + frac * (bar.Size.X.Offset > 0 and bar.Size.X.Offset or 200), 0, 22)
    thumb.BackgroundColor3 = C.accentGreen
    thumb.BorderSizePixel = 0
    thumb.AutoButtonColor = false
    local tcorner = Instance.new("UICorner", thumb)
    tcorner.CornerRadius = UDim.new(1,0)

    -- dragging
    local dragging = false
    local currentValue = initial
    thumb.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
        end
    end)
    thumb.InputEnded:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = false
        end
    end)
    RunService.Heartbeat:Connect(function()
        if dragging then
            local mouse = player:GetMouse()
            local barPos = bar.AbsolutePosition.X
            local barW = bar.AbsoluteSize.X
            local rel = math.clamp(mouse.X - barPos, 0, barW)
            local frac2 = (barW > 0) and (rel / barW) or 0
            local val = math.floor(min + frac2 * (max - min) + 0.5)
            currentValue = val
            value.Text = tostring(val)
            fill.Size = UDim2.new(frac2, 0, 1, 0)
            thumb.Position = UDim2.new(0, 40 + frac2 * barW, 0, 22)
        end
    end)
    bar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            local mouse = player:GetMouse()
            local barPos = bar.AbsolutePosition.X
            local barW = bar.AbsoluteSize.X
            local rel = math.clamp(mouse.X - barPos, 0, barW)
            local frac2 = (barW > 0) and (rel / barW) or 0
            local val = math.floor(min + frac2 * (max - min) + 0.5)
            currentValue = val
            value.Text = tostring(val)
            fill.Size = UDim2.new(frac2, 0, 1, 0)
            thumb.Position = UDim2.new(0, 40 + frac2 * barW, 0, 22)
        end
    end)
    return container
end

