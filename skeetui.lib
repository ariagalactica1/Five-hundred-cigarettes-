-- Controls factories
local State = {}

local function rowContainer(parent)
	local r = Instance.new("Frame")
	r.BackgroundTransparency = 1
	r.Size = UDim2.new(1, 0, 0, 32)
	r.Parent = parent
	hlist(r, 8)
