local function sideButton(text, active)
	local btn = Instance.new("TextButton")
	btn.Text = "    " .. text
	btn.Font = Enum.Font.Gotham
	btn.TextSize = 14
	btn.TextXAlignment = Enum.TextXAlignment.Left
	btn.AutoButtonColor = false
	btn.Size = UDim2.new(1, 0, 0, 32)
	btn.BackgroundColor3 = theme.panel
	btn.TextColor3 = theme.muted
	round(btn, 6)
	stroke(btn, theme.stroke, 1)
	btn.Parent = sidebarList

	local bar = Instance.new("Frame")
	bar.Size = UDim2.new(0, 3, 1, -8)
	bar.Position = UDim2.fromOffset(6, 4)
	bar.BackgroundColor3 = theme.accent
	bar.BorderSizePixel = 0
	bar.Parent = btn
	bar.Visible = false

	local function setActive()
		if currentActive and currentActive ~= btn then
			currentActive.bar.Visible = false
			currentActive.TextColor3 = theme.muted
			currentActive.BackgroundColor3 = theme.panel
		end
		currentActive = btn
		bar.Visible = true
		btn.TextColor3 = theme.text
		btn.BackgroundColor3 = theme.subtle
	end

	btn.MouseEnter:Connect(function()
		if currentActive ~= btn then tween(btn, nil, {BackgroundColor3 = theme.panel}) end
	end)
	btn.MouseLeave:Connect(function()
		if currentActive ~= btn then tween(btn, nil, {BackgroundColor3 = theme.panel}) end
	end)

	btn.MouseButton1Click:Connect(setActive)
	if active then setActive() end

	btn.bar = bar
	return btn
end

