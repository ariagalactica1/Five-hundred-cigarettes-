    icon.TextSize = 14
    icon.TextColor3 = active and C.textWhite or C.accentGreen
    icon.TextXAlignment = Enum.TextXAlignment.Center

    local label = Instance.new("TextLabel")
    label.Name = "Label"
    label.Parent = btn
    label.Size = UDim2.new(1, -36, 1, 0)
    label.Position = UDim2.new(0,40,0,0)
