local function showConfirmModal(show)
	dim.Visible = show
	dim.ZIndex = show and 500 or 1
	confirmDialog.Visible = show

	if show then
		blur.Enabled = true
	else
		blur.Enabled = false
		blur.Size = 0
	end

	if SETTINGS.Animations and not SETTINGS.FPSSaver then
		if show then
			TweenService:Create(dim, TweenInfo.new(0.12), {BackgroundTransparency = 0.6}):Play()
			TweenService:Create(blur, TweenInfo.new(0.12), {Size = 8}):Play()
		else
			TweenService:Create(dim, TweenInfo.new(0.12), {BackgroundTransparency = 1}):Play()
			TweenService:Create(blur, TweenInfo.new(0.12), {Size = 0}):Play()
		end
	else
		dim.BackgroundTransparency = show and 0.6 or 1
		blur.Size = show and 8 or 0
	end
end

uninjectBtn.MouseButton1Click:Connect(function() showConfirmModal(true) end)
confirmNoBtn.MouseButton1Click:Connect(function() showConfirmModal(false) end)
confirmYesBtn.MouseButton1Click:Connect(function()
	showConfirmModal(false)
	notify("Uninjected.")
	gui:Destroy() -- triggers global cleanup
end)

-- Extra ESC handler (always close modal even if focused on a TextBox)
UserInputService.InputBegan:Connect(function(input)
	if confirmDialog.Visible and input.KeyCode == Enum.KeyCode.Escape then
		showConfirmModal(false)
	end
end)

