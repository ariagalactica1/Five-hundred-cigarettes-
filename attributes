--// Local / client-sided attribute scanner for LocalPlayer

local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

-- Pretty-print attributes for a single Instance
local function printAttributesForInstance(inst)
    local attrs = inst:GetAttributes()
    if not attrs or not next(attrs) then
        return
    end

    print("=== Instance:", inst:GetFullName(), "===")

    for attributeName, attributeValue in pairs(attrs) do
        local valueType = typeof(attributeValue)
        local valueStr

        if valueType == "Vector3"
            or valueType == "Vector2"
            or valueType == "CFrame"
            or valueType == "Color3" then
            valueStr = tostring(attributeValue)
        elseif valueType == "table" then
            valueStr = "<table>"
        else
            valueStr = tostring(attributeValue)
        end

        print(string.format("  %s (%s) = %s", attributeName, valueType, valueStr))
    end
end

-- Scan LocalPlayer and all descendants
local function scanLocalPlayerAttributes()
    if not localPlayer then
        warn("LocalPlayer not found.")
        return
    end

    print("=== Scanning attributes for LocalPlayer and all descendants ===")

    -- LocalPlayer itself
    printAttributesForInstance(localPlayer)

    -- Everything under LocalPlayer (Character, PlayerGui, etc.)
    for _, inst in ipairs(localPlayer:GetDescendants()) do
        printAttributesForInstance(inst)
    end

    print("=== Scan complete ===")
end

scanLocalPlayerAttributes()
