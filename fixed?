local function makeBarRow(labelText)
	local row = Instance.new("Frame")
	row.BackgroundTransparency = 1
	row.Size = UDim2.new(1,0,0,30)
	row.Parent = footer

	local lab = Instance.new("TextLabel")
	lab.BackgroundTransparency = 1
	lab.Size = UDim2.new(0.22,0,1,0)
	lab.Font = Enum.Font.GothamBold
	lab.TextSize = 14
	lab.TextXAlignment = Enum.TextXAlignment.Left
	lab.TextColor3 = THEME.text
	lab.Text = labelText
	lab.Parent = row

	local bg = Instance.new("Frame")
	bg.Size = UDim2.new(0.76,0,0.56,0)
	bg.Position = UDim2.new(0.23,0,0.22,0)
	bg.BackgroundColor3 = THEME.surface
	bg.Parent = row
	round(bg, RADIUS-6)
	stroke(bg, 1, THEME.text, 0.88)

	local fill = Instance.new("Frame")
	fill.Size = UDim2.new(0,0,1,0)
	fill.BorderSizePixel = 0
	fill.Parent = bg
	round(fill, RADIUS-6)

	return fill
end

local healthBar = makeBarRow("Health")
local resilienceBar = makeBarRow("Resilience")

local function applyBarColors()
	local h1 = SETTINGS.ColorblindBars and THEME.barH1 or THEME.barH1
	local h2 = SETTINGS.ColorblindBars and THEME.barH1 or THEME.barH2
	local r1 = SETTINGS.ColorblindBars and THEME.barR1 or THEME.barR1
	local r2 = SETTINGS.ColorblindBars and THEME.barR1 or THEME.barR2

	if not SETTINGS.FPSSaver then
		for _, f in ipairs({healthBar, resilienceBar}) do
			for _, ch in ipairs(f:GetChildren()) do if ch:IsA("UIGradient") then ch:Destroy() end end
		end
		local g1 = Instance.new("UIGradient"); g1.Color = ColorSequence.new{ColorSequenceKeypoint.new(0,h1), ColorSequenceKeypoint.new(1,h2)}; g1.Parent = healthBar
		local g2 = Instance.new("UIGradient"); g2.Color = ColorSequence.new{ColorSequenceKeypoint.new(0,r1), ColorSequenceKeypoint.new(1,r2)}; g2.Parent = resilienceBar
	end
end
applyBarColors()

local function tweenBar(fill, pct)
	pct = math.clamp(pct,0,1)
	if SETTINGS.Animations and not SETTINGS.FPSSaver then
		TweenService:Create(fill, TweenInfo.new(0.15, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {Size = UDim2.new(pct,0,1,0)}):Play()
	else
		fill.Size = UDim2.new(pct,0,1,0)
	end
end

------------------------------------------
-- Character stat helpers (LocalScript) --
------------------------------------------
local VALUE_CLASSES = {
    NumberValue = true, IntValue = true, BoolValue = true, StringValue = true,
}

local function getCharacter(p)
    return p and p.Character or nil
end

-- Wait briefly for a character with Humanoid (to avoid [NO DATA] flashes)
local function waitForCharacter(p, timeout)
	timeout = timeout or 2
	local char = p and p.Character
	local t0 = os.clock()
	while (not char or not char:FindFirstChildOfClass("Humanoid")) and os.clock() - t0 < timeout do
		local evFired = false
		p.CharacterAdded:Wait()
		evFired = true
		char = p.Character
		if evFired then break end
	end
	return p and p.Character or char
end

-- returns Attribute on Character or ValueObject.Value (recursive), else Player attribute
local function getStat(targetPlayer, char, name)
    if char then
        -- Attribute on the Character model
        local okAttr, a = pcall(function() return char:GetAttribute(name) end)
        if okAttr and a ~= nil then return a end
        -- ValueObject: search recursively anywhere under character
        local obj = char:FindFirstChild(name, true) -- recursive
        if obj and VALUE_CLASSES[obj.ClassName] then
            local ok, v = pcall(function() return obj.Value end)
            if ok then return v end
        end
    end
    -- Fallback: Player attribute (if creator replicated it there)
    if targetPlayer then
        local ok, v = pcall(function() return targetPlayer:GetAttribute(name) end)
        if ok and v ~= nil then return v end
    end
    return nil
end

-- watch a stat (by name); also react when stat appears/disappears anywhere under char
local function watchStat(targetPlayer, char, statName, onChange)
    local conns = {}

    -- Attribute on Character
    table.insert(conns, char.AttributeChanged:Connect(function(changedName)
        if changedName == statName then
            onChange(getStat(targetPlayer, char, statName))
        end
    end))

    -- Existing VO at init (recursive first hit)
    local vo = char:FindFirstChild(statName, true)
    if vo and VALUE_CLASSES[vo.ClassName] then
        table.insert(conns, vo.Changed:Connect(function()
            onChange(getStat(targetPlayer, char, statName))
        end))
    end

    -- Any descendant added/removed with this name
    table.insert(conns, char.DescendantAdded:Connect(function(d)
        if d.Name == statName and VALUE_CLASSES[d.ClassName] then
            onChange(getStat(targetPlayer, char, statName))
            table.insert(conns, d.Changed:Connect(function()
                onChange(getStat(targetPlayer, char, statName))
            end))
        end
    end))
    table.insert(conns, char.DescendantRemoving:Connect(function(d)
        if d.Name == statName and VALUE_CLASSES[d.ClassName] then
            onChange(getStat(targetPlayer, char, statName))
        end
    end))

    -- initial fire
    task.defer(function()
        onChange(getStat(targetPlayer, char, statName))
    end)

    return conns
end

local function formatInt(n)
    if typeof(n) ~= "number" then return "N/A" end
    return tostring(math.floor(n)):reverse():gsub("(%d%d%d)","%1,"):reverse():gsub("^,","")
end

local function getHealthPieces(char)
    local hum = char and char:FindFirstChildOfClass("Humanoid")
    if hum then return hum, hum.Health, hum.MaxHealth end
    return nil, nil, nil
end

-------------------------------
-- BIO TAB update (Character) --
-------------------------------
local function updateTab1_fromChar(targetPlayer)
	-- Wait a moment for the character/humanoid if needed
	local char = getCharacter(targetPlayer) or waitForCharacter(targetPlayer, 0.5)
    if not char then
        for _, lbl in pairs(tab1Labels) do lbl.Text = "[NO DATA]" end
        healthBar.Size = UDim2.new(0,0,1,0)
        return
    end

    local function set(lbl, prefix, val)
        tab1Labels[lbl].Text = ("%s: %s"):format(prefix, tostring(val ~= nil and val or "N/A"))
    end

    set("Subject", "Subject", targetPlayer.Name)
    set("Exposure","Exposure",            getStat(targetPlayer, char, "Exposure"))
    set("Strength","Strength",            getStat(targetPlayer, char, "StrengthAttribute"))
    set("Agility","Agility",              getStat(targetPlayer, char, "AgilityAttribute"))
    set("Intelligence","Intelligence",    getStat(targetPlayer, char, "IntelligenceAttribute"))
    set("MutationType","MutationType",    getStat(targetPlayer, char, "MutationType"))
    set("PotentialEvolution","PotentialEvolution", getStat(targetPlayer, char, "PotentialEvolution"))
    set("HasReachedAdvancedMutation","AdvancedMutation", getStat(targetPlayer, char, "HasReachedAdvancedMutation"))

    local weight = getStat(targetPlayer, char, "Weight")
    local wtext = "Weight: " .. tostring(weight ~= nil and weight or "N/A")
    if type(weight) == "number" then
        wtext = wtext .. " kg"
        local c = Color3.fromRGB(200,255,200)
        if math.abs(weight - 77.2) < 1e-6 then c = Color3.fromRGB(255,215,0); wtext ..= " [PERFECT]"
        elseif weight >= 60 and weight < 80 then c = Color3.fromRGB(100,255,100); wtext ..= " [Average]"
        elseif weight >= 80 and weight <= 120 then c = Color3.fromRGB(255,150,100); wtext ..= " [Overweight]"
        elseif weight >= 50 and weight < 60 then c = Color3.fromRGB(150,200,255); wtext ..= " [Underweight]"
        else c = Color3.fromRGB(255,100,100); wtext ..= " [Out of Range]" end
        tab1Labels.Weight.TextColor3 = c
    else
        tab1Labels.Weight.TextColor3 = Color3.fromRGB(200,255,200)
    end
    tab1Labels.Weight.Text = wtext

    local hum, h, mh = getHealthPieces(char)
    if hum and typeof(h)=="number" and typeof(mh)=="number" and mh>0 then
        tab1Labels.Health.Text = string.format("Health: %d / %d", h, mh)
        tweenBar(healthBar, h/mh)
    else
        tab1Labels.Health.Text = "Health: N/A"
        healthBar.Size = UDim2.new(0,0,1,0)
    end
end

--------------------------------
-- STATS TAB update (Character) --
--------------------------------
local function updateTab2_fromChar(targetPlayer)
	-- Wait a moment for the character/humanoid if needed
    local char = getCharacter(targetPlayer) or waitForCharacter(targetPlayer, 0.5)
    if not char then
        for _, lbl in pairs(tab2Labels) do lbl.Text = "[NO DATA]" end
        resilienceBar.Size = UDim2.new(0,0,1,0)
        return
    end

    local function set(lbl, prefix, val)
        tab2Labels[lbl].Text = ("%s: %s"):format(prefix, tostring(val ~= nil and val or "N/A"))
    end

    local resilience     = getStat(targetPlayer, char, "Resilience")
    local maxResilience  = getStat(targetPlayer, char, "MaxResilience")
    set("Resilience", "Resilience", resilience)
    set("Max Resilience", "Max Resilience", maxResilience)

    if typeof(resilience)=="number" and typeof(maxResilience)=="number" and maxResilience>0 then
        local pct = math.clamp(resilience/maxResilience, 0, 1)
        tweenBar(resilienceBar, pct)
    else
        resilienceBar.Size = UDim2.new(0,0,1,0)
    end

    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        local s  = hum.WalkSpeed
        local d  = SETTINGS.DefaultSpeed or 9
        local rs = SETTINGS.RunSpeed or 20
        local diff = s - d
        local diffText = (diff>=0 and "+" or "") .. string.format("%.1f", diff)
        tab2Labels.WalkSpeed.Text = string.format("WalkSpeed: %.1f", s)
        tab2Labels["Speed Difference"].Text = string.format("Speed Difference: %s (Default: %g | Run: %g)", diffText, d, rs)
    else
        tab2Labels.WalkSpeed.Text = "WalkSpeed: N/A"
        tab2Labels["Speed Difference"].Text = "Speed Difference: N/A"
    end

    set("Region Code", "Region Code", getStat(targetPlayer, char, "RegionCode"))
    set("Is Elite",    "Is Elite",    getStat(targetPlayer, char, "IsElite"))
    set("Current Zone","Current Zone",getStat(targetPlayer, char, "CurrentZone"))

    -- Credits under Character/Data or Character directly (recursive handled in getStat for named nodes, but here we scan common spots)
    local credits = nil
    local dataFolder = char:FindFirstChild("Data", true)
    if dataFolder then
        local cv = dataFolder:FindFirstChild("Credits", true)
        if cv and VALUE_CLASSES[cv.ClassName] and typeof(cv.Value) == "number" then
            credits = cv.Value
        end
    end
    if credits == nil then
        local anyCredits = char:FindFirstChild("Credits", true)
        if anyCredits and VALUE_CLASSES[anyCredits.ClassName] and typeof(anyCredits.Value) == "number" then
            credits = anyCredits.Value
        end
    end
    tab2Labels.Credits.Text = "Credits: " .. (credits and formatInt(credits) or "N/A")

    local perksList = {}
    local function scanPerks(root)
        for _, ch in ipairs(root:GetDescendants()) do
            if ch:IsA("BoolValue") and ch.Name:lower():find("perk") and ch.Value == true then
                table.insert(perksList, ch.Name)
            elseif VALUE_CLASSES[ch.ClassName] and ch.Name:lower():find("perk") and typeof(ch.Value) == "number" and ch.Value > 0 then
                table.insert(perksList, ch.Name)
            end
        end
    end
    if dataFolder then scanPerks(dataFolder) else scanPerks(char) end
    tab2Labels["Active Perks"].Text = (#perksList > 0) and ("Active Perks: " .. table.concat(perksList, ", ")) or "Active Perks: None"
end

-------------------------------
-- Target wiring (event-based) --
-------------------------------
local currentTarget = nil
local liveConns = {}

local function disconnectLive()
    for _, c in ipairs(liveConns) do pcall(function() c:Disconnect() end) end
    table.clear(liveConns)
end

local function refreshAllFromTarget(targetPlayer)
    if not targetPlayer then
        for _, l in pairs(tab1Labels) do l.Text = "[NO DATA]" end
        for _, l in pairs(tab2Labels) do l.Text = "[NO DATA]" end
        healthBar.Size = UDim2.new(0,0,1,0)
        resilienceBar.Size = UDim2.new(0,0,1,0)
        return
    end
    updateTab1_fromChar(targetPlayer)
    updateTab2_fromChar(targetPlayer)
end

local WATCH_NAMES = {
    -- BIO
    "Exposure","StrengthAttribute","AgilityAttribute","IntelligenceAttribute",
    "MutationType","PotentialEvolution","HasReachedAdvancedMutation","Weight",
    -- STATS
    "Resilience","MaxResilience","RegionCode","IsElite","CurrentZone",
    -- extras (optional)
    "Credits",
}

local function bindCharacterSignals(targetPlayer, char)
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        table.insert(liveConns, hum.HealthChanged:Connect(function()
            updateTab1_fromChar(targetPlayer)
        end))
        table.insert(liveConns, hum:GetPropertyChangedSignal("MaxHealth"):Connect(function()
            updateTab1_fromChar(targetPlayer)
        end))
        table.insert(liveConns, hum:GetPropertyChangedSignal("WalkSpeed"):Connect(function()
            updateTab2_fromChar(targetPlayer)
        end))
    end

    -- Watch known stat names anywhere under Character
    for _, name in ipairs(WATCH_NAMES) do
        local conns = watchStat(targetPlayer, char, name, function()
            updateTab1_fromChar(targetPlayer)
            updateTab2_fromChar(targetPlayer)
        end)
        for _, c in ipairs(conns) do table.insert(liveConns, c) end
    end

    -- Generic changes: if *anything* relevant appears/disappears, refresh
    table.insert(liveConns, char.DescendantAdded:Connect(function(d)
        if VALUE_CLASSES[d.ClassName] or d:IsA("BoolValue") then
            updateTab1_fromChar(targetPlayer)
            updateTab2_fromChar(targetPlayer)
        end
    end))
    table.insert(liveConns, char.DescendantRemoving:Connect(function(d)
        if VALUE_CLASSES[d.ClassName] or d:IsA("BoolValue") then
            updateTab1_fromChar(targetPlayer)
            updateTab2_fromChar(targetPlayer)
        end
    end))
end

local function rewireForTarget(targetPlayer)
    disconnectLive()
    currentTarget = targetPlayer

    -- Try to ensure the character is there (short wait)
    if targetPlayer then
        waitForCharacter(targetPlayer, 0.5)
    end

    refreshAllFromTarget(targetPlayer)

    if not targetPlayer then return end

    local char = getCharacter(targetPlayer)
    if char then bindCharacterSignals(targetPlayer, char) end

    table.insert(liveConns, targetPlayer.CharacterAdded:Connect(function(newChar)
        disconnectLive()
        currentTarget = targetPlayer
        refreshAllFromTarget(targetPlayer)
        bindCharacterSignals(targetPlayer, newChar)
    end))

    -- Optional safety refresh (off by default)
    if SETTINGS.SafetyRefreshSeconds and SETTINGS.SafetyRefreshSeconds > 0 then
        local this = targetPlayer
        task.spawn(function()
            while currentTarget == this do
                task.wait(SETTINGS.SafetyRefreshSeconds)
                if currentTarget == this then
                    refreshAllFromTarget(this)
                end
            end
        end)
    end
end

-- Resolve target by textbox
local function resolveTargetByBox()
    local t = box.Text
    return (t == "" and player) or Players:FindFirstChild(t)
end

box.FocusLost:Connect(function()
    rewireForTarget(resolveTargetByBox())
end)

-- Also rewire if the selected player leaves (so we fall back to self cleanly)
Players.PlayerRemoving:Connect(function(p)
	if currentTarget == p then
		rewireForTarget(player)
	end
end)

-- Default target = self
rewireForTarget(player)

