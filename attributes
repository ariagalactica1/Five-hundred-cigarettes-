-- Local / client-sided attribute scanner for LocalPlayer
-- Prints ONLY attributes (one per line) and skips Script-y instances

local Players = game:GetService("Players")
local localPlayer = Players.LocalPlayer

local function printAttributesForInstance(inst)
    local attrs = inst:GetAttributes()
    if not attrs or not next(attrs) then
        return
    end

    -- Skip anything script-like (Script, LocalScript, ModuleScript, PlayerScripts, etc.)
    local className = inst.ClassName
    if className:find("Script") then
        return
    end

    local fullPath = inst:GetFullName()

    for attributeName, attributeValue in pairs(attrs) do
        local valueType = typeof(attributeValue)
        local valueStr = tostring(attributeValue)

        -- One clean line per attribute:
        -- path.AttributeName (Type) = Value
        print(string.format("%s.%s (%s) = %s", fullPath, attributeName, valueType, valueStr))
    end
end

local function scanLocalPlayerAttributes()
    if not localPlayer then
        warn("LocalPlayer not found.")
        return
    end

    print("=== Attribute scan for LocalPlayer and descendants (no scripts) ===")

    -- Attributes directly on the Player object
    printAttributesForInstance(localPlayer)

    -- Attributes on descendants (Character, Backpack, PlayerGui, etc.)
    for _, inst in ipairs(localPlayer:GetDescendants()) do
        printAttributesForInstance(inst)
    end

    print("=== Scan complete ===")
end

scanLocalPlayerAttributes()
