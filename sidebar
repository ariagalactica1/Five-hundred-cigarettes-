createButton("üß®", "Bomb")
createButton("üåç", "World")
createButton("üî≠", "View")

createHeader("Miscellaneous")
createButton("üõ†Ô∏è", "Main")
createButton("üéí", "Inventory")
createButton("üìÑ", "Lua")
createButton("‚öôÔ∏è", "Configs")

