-- Place this LocalScript inside StarterGui
local StarterGui = game:GetService("StarterGui")

local screenGui = Instance.new("ScreenGui")
screenGui.Name = "GamesenseSidebar"
screenGui.ResetOnSpawn = false
screenGui.Parent = StarterGui

local sidebar = Instance.new("Frame")
sidebar.Name = "Sidebar"
sidebar.Size = UDim2.new(0, 150, 1, 0)
sidebar.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
sidebar.BackgroundTransparency = 0.2
sidebar.BorderSizePixel = 0
sidebar.Parent = screenGui

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Padding = UDim.new(0, 6)
UIListLayout.SortOrder = Enum.SortOrder.LayoutOrder
UIListLayout.Parent = sidebar

local function createHeader(text)
	local label = Instance.new("TextLabel")
	label.Size = UDim2.new(1, 0, 0, 20)
	label.BackgroundTransparency = 1
	label.Text = text
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.TextSize = 14
	label.Font = Enum.Font.SourceSansBold
	label.TextXAlignment = Enum.TextXAlignment.Left
	label.TextStrokeTransparency = 0.7
	label.Parent = sidebar
	return label
end

local function createButton(icon, text, isActive)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -10, 0, 24)
	btn.Position = UDim2.new(0, 5, 0, 0)
	btn.BackgroundColor3 = isActive and Color3.fromRGB(50, 50, 50) or Color3.fromRGB(15, 15, 15)
	btn.BackgroundTransparency = isActive and 0.2 or 1
	btn.BorderSizePixel = 0
	btn.Text = icon .. "  " .. text
	btn.TextColor3 = isActive and Color3.fromRGB(255, 255, 255) or Color3.fromRGB(97, 194, 59)
	btn.TextSize = 14
	btn.Font = Enum.Font.SourceSans
	btn.TextXAlignment = Enum.TextXAlignment.Left
	btn.Parent = sidebar
	return btn
end

-- Header
createHeader("GAMESENSE")

