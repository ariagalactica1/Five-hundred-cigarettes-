settingsBtn.MouseButton1Click:Connect(function()
	local wasVisible = settingsPanel.Visible
	settingsPanel.Visible = true
	if SETTINGS.Animations and not SETTINGS.FPSSaver then
		if wasVisible then
			TweenService:Create(settingsPanel, TweenInfo.new(0.2, Enum.EasingStyle.Quad, Enum.EasingDirection.Out), {
				Size = UDim2.new(0, 290, 0, 0),
				Position = UDim2.new(1, -300, 0, TITLE_H + 8)
			}):Play()
			task.wait(0.2)
			settingsPanel.Visible = false
			settingsPanel.Size = UDim2.new(0, 290, 0, 364)
		else
			settingsPanel.Size = UDim2.new(0, 290, 0, 0)
			TweenService:Create(settingsPanel, TweenInfo.new(0.25, Enum.EasingStyle.Back, Enum.EasingDirection.Out), {
				Size = UDim2.new(0, 290, 0, 364)
			}):Play()
		end
	else
		settingsPanel.Visible = not wasVisible
	end
end)

